{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "jsx": "preserve",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noEmitHelpers": true,
    "sourceMap": true,
    "allowJs": true,
    "baseUrl": "./",
    "paths": {
      "@app/*": ["./src/*"]
    }
  },
  "include": [
    "./src/**/*"
  ]
}
